<div class="page-header">
  <p>登録ユーザー一覧</p>
</div>

<div class="container">
  <div class="col-md-12">
    <div class="table-responsive">
      <table class="table table-bordered table-hover table-condensed">
        <thead>
          <tr>
            <th>id</th>
            <th>名前</th>
            <th>ログインid</th>
            <th>chatworkのid</th>
            <th>スーパーユーザ</th>
            <th></th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.login_id %></td>
            <td><%= user.chatworkid %></td>
            <td><%=user.superuser %></td>
            <td><%= link_to '編集',edit_user_path(user),class:'btn btn-info btn-lg btn-block' %></td>
            <td><%= link_to '削除',user_path(user),class:'btn btn-danger btn-lg btn-block',method: :delete,data:{confirm: '本当に削除しますか?'} %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 col-md-offset-3 col-sm-6 col-xs-12">
      <div class="class=text-center">
        <%= link_to '新規作成',new_user_path,class:'btn btn-primary btn-lg btn-block' %>
      </div>
    </div>

    <div class="col-md-3 col-md-offset-1 col-sm-6 col-xs-12">
      <div class="class=text-center">
        <%= link_to '当番画面へ戻る',"/toban",class:'btn btn-default btn-lg btn-block' %>
      </div>
    </div>
  </div>
</div>
