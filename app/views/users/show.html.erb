<div class="page-header">
  <div class="navbar navbar-default" role="navigation">
   <ul class="nav nav-tabs">
     <li role="presentation" class="active"><%= link_to '編集',"users#edit"%></li>
     <li role="presentation"><a href="#">Users</a></li>
   </ul>
  </div>
</div>

<div class="container">
<div class="col-md-12">
  <div class="table-responsive">
  <table class="table table-bordered table-hover table-condensed">
    <thead>
        <tr>
        <th class="active">id</th>
        <th>名前</th>
        <th>パスワード</th>
        <th>chatworkのid</th>
        <th>スーパーユーザか</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
      <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.password %></td>
          <td><%= user.chatworkid %></td>
          <td><%= user.superuser %></td>
          <td><%= link_to '編集',edit_user_path(user),class:'btn btn-info btn-lg btn-block' %>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
